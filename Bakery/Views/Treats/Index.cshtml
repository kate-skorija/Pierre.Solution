@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>

<div class="content">
  <h2>Treats</h2>

  @if (@Model.Count == 0)
  {
    <p>No treats have been added.</p>
  }

  <ul>
    @foreach (Treat treat in @Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>

  <button class="btn btn-dark">@Html.ActionLink("Add New Treat", "Create")</button>
</div>