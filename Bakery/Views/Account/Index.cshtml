@{
  Layout = "_Layout";
}

<h2>Account Authentication</h2> 
<hr />

<div class="content">
  @if (User.Identity.IsAuthenticated)
  {
      <h3>Hello @User.Identity.Name!</h3>
      <h4>Welcome to Pierre's Bakery App.</h4>
      <button class="btn btn-dark">@Html.ActionLink("View Our Goods", "Details", "Home")</button><br>
      @using (Html.BeginForm("LogOff", "Account"))
      {
        <input type="submit" class="btn btn-default btn-dark" value="Log out" />
      }
  }
  else
  {
    <p>Please log in to continue, or register to create an account.</p>
    <button class="btn btn-dark">@Html.ActionLink("Log in", "Login")</button>
  }
</div>