@{
  Layout = "_Layout";
}

@using Bakery.ViewModels
@model RegisterViewModel
<h2>Register to use Pierre's Bakery App</h2>

<hr />
@using (Html.BeginForm()) 
{
  @Html.LabelFor(u => u.Email)
  @Html.TextBoxFor(u => u.Email, new { @class="form-control", required="required" })

  @Html.LabelFor(u=> u.Password)
  @Html.PasswordFor(u=> u.Password, new { @class="form-control", required="required" })

  @Html.LabelFor(u=> u.ConfirmPassword)
  @Html.PasswordFor(u=> u.ConfirmPassword, new { @class="form-control", required="required" })

  <input type="submit" value="Register" />
}