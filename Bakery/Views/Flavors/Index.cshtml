@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Flavor>

<div class="content">
  <h2>Flavors</h2>

  @if (@Model.Count == 0)
  {
    <p>No flavors have been added.</p>
  }

  <ul>
    @foreach (Flavor flavor in @Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>

  <button class="btn btn-dark">@Html.ActionLink("Add New Flavor", "Create")</button>
</div>